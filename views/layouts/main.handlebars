	<!-- Modal Structure LOGIN/SIGNUP -->
	<div id="modal1" class="modal">
		<div class="modal-content">
			<h2>Log in</h2>
			<form class="col s12">
				<div class="row">
					<div class="input-field col s6">
						<label for="email-login">Email</label>
						<input id="email-login" type="email" class="validate">
					</div>
					<div class="input-field col s6">
						<label for="password">Password</label>
						<input id="password" type="password" class="validate">
					</div>
			</form>
		</div>
		<h6>If you don't already have an account, create an account <a href="./signup">here.</a>
			<h6>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-green btn-flat">Sign in</a>
	</div>
	</div>

	<!-- Modal 2 Structure CREATE -->
	<div id="modal2" class="modal">
		<div class="modal-content">
			<h2>Become a Doer</h2>
			<div class="row">
				<form class="col s12">
					<div class="row">
						<div class="input-field col s6">
							<i class="material-icons prefix">account_circle</i>
							<input id="icon_prefix" type="text" class="validate">
							<label for="icon_prefix">Name</label>
						</div>
						<div class="input-field col s6">
							<i class="material-icons prefix">phone</i>
							<input id="icon_telephone" type="tel" class="validate">
							<label for="icon_telephone">Telephone</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s6">
							<label for="create-email">Email</label>
							<input id="create-login" type="email" class="validate">
						</div>
						<div class="input-field col s6">
							<label for="create-password">Password</label>
							<input id="create-password" type="password" class="validate">
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-green btn-flat">Create your account</a>
		</div>
	</div>

	<div class="parallax-container">
		<div class="parallax">
			<img src="assets/images/green.jpg" alt="background" />
		</div>
		<div class="iris">
			<div class="card transparent z-depth-5">
				<div class="search">
					<h1>Find a Doer</h1>
					<input class="searchbar #ffffff white" type="text" placeholder="  Search....">
					<button class="btn waves-effect waves-light btn-large #4caf50 green" type="submit" name="action">
						<i class="fas fa-search"></i>
					</button>
				</div>
			</div>
		</div>
	</div>

